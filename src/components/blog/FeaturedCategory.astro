---
import { getCollection } from 'astro:content';
import { Picture } from 'astro:assets';
//import ColumnPosts from './ColumnPosts.astro';

// Import images
import bakewareToolsImg from "@/assets/images/bakeware-tools.png";
import bakewareImg from "@/assets/images/bakeware-1.png";
import bakewareImg2 from "@/assets/images/bakeware-2.png";
import bakewareImg3 from "@/assets/images/bakeware-3.png";

// Fetch bakeware blog posts
const bakewarePosts = (await getCollection('blog', ({ data }) => 
  data.category === 'Bakeware'
)).slice(0, 5);

// Copy content from AIDA structure
const bakewareCopy = {
  attention: "Staring longingly at that muffin recipe but your counter looks like a game of Bakeware Tetris gone wrong? Dreaming of fresh bread but your oven rack feels claustrophobic?",
  interest: "Imagine bakeware that *actually* understands your petite palace. No more wrestling with pans that dwarf your sink or stacking nightmares that avalanche when you open the cupboard.",
  desire: [
    "**Cabinet Zen:** Nesting sets that magically disappear into a single footprint",
    "**Oven Harmony:** Pans sized *just right* for compact ovens",
    "**Countertop Calm:** Prep, bake, and serve without sacrificing workspace",
    "**Effortless Cleanup:** Fewer dishes to wrestle into your tiny sink",
    "**Baking Freedom:** Weekend croissant projects become easy and exciting!"
  ],
  action: "Ready to reclaim your tiny kitchen and whisk away baking frustrations?"
};

// Feature items
const features = [
  {
    icon: "M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z",
    title: "Space-Efficient Design",
    description: "Nesting and stacking capabilities reduce storage needs by up to 70%"
  },
  {
    icon: "M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z",
    title: "Multi-Functional",
    description: "Each piece serves multiple purposes - bake, roast, serve, and store"
  },
  {
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    title: "Oven-Safe",
    description: "Designed for compact ovens with even heat distribution for perfect results"
  }
];

// Image gallery
const images = [
  { src: bakewareToolsImg, alt: "Nesting bakeware set" },
  { src: bakewareImg, alt: "Compact baking pan" },
  { src: bakewareImg2, alt: "Stackable bakeware reviews" },
  { src: bakewareImg3, alt: "Multi-purpose bakeware" }
];
---

<div class="relative overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-cyan-100/50 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-purple-50/30 rounded-full blur-3xl -z-10"></div>
  
  <div class="max-w-7xl mx-auto px-4 py-16 md:py-24">
    <!-- Hero Section with animated gradient -->
    <section class="text-center mb-20 relative">
      <div class="absolute inset-x-0 -top-40 transform-gpu overflow-hidden blur-3xl -z-10">
        <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-cyan-200 to-purple-400 opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"></div>
      </div>
      
      <h1 class="text-5xl md:text-6xl font-bold mb-6 tracking-tight">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-700 to-cyan-500">
          Tiny Kitchen <span class="text-teal-500">Baking Revolution</span>
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-700 max-w-3xl mx-auto leading-relaxed">
        Space-saving bakeware designed for compact living
      </p>
    </section>

    <!-- Main Content - Two Columns with improved layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
      <!-- Left Column - Main Content (wider) -->
      <div class="lg:col-span-8">
        <!-- Main content card with glassmorphism -->
        <div class="bg-white/80 backdrop-blur-md rounded-3xl p-8 md:p-10 mb-12 shadow-xl border border-cyan-100/50 relative overflow-hidden group">
          <!-- Decorative elements -->
          <div class="absolute -top-24 -right-24 w-48 h-48 bg-gradient-to-br from-cyan-200/30 to-purple-400/20 rounded-full blur-2xl group-hover:scale-110 transition-transform duration-700"></div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-10 relative z-10">
            <div>
              <h2 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-700 to-teal-600 mb-6">The Tiny Kitchen Baking Dilemma</h2>
              <p class="text-gray-700 mb-6 leading-relaxed">{bakewareCopy.attention}</p>
              <p class="text-gray-700 mb-8 leading-relaxed">{bakewareCopy.interest}</p>
              
              <div class="space-y-5 mb-10">
                {bakewareCopy.desire.map((item) => (
                  <div class="flex items-start group">
                    <div class="flex-shrink-0 mt-1 mr-4">
                      <div class="w-6 h-6 rounded-full bg-gradient-to-br from-cyan-500 to-purple-400 flex items-center justify-center shadow-md group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      </div>
                    </div>
                    <p class="text-gray-800 group-hover:translate-x-1 transition-transform duration-300" set:html={item}></p>
                  </div>
                ))}
              </div>
              
              <a 
                href="/blog/category/bakeware/" 
                class="inline-flex items-center gap-2 bg-gradient-to-r from-teal-600 to-cyan-500 text-white font-medium py-3 px-8 rounded-full transition-all duration-300 hover:shadow-lg hover:shadow-cyan-200/50 hover:-translate-y-1 group"
              >
                <span>Explore Space-Saving Bakeware</span>
                <span class="group-hover:translate-x-1 transition-transform duration-300">â†’</span>
              </a>
            </div>
            
            <div class="grid grid-cols-2 gap-4 md:gap-6">
              {images.map((img, index) => (
                <div class={`bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 ${index === 0 ? 'col-span-2' : ''}`}>
                  <Picture
                    src={img.src} 
                    alt={img.alt} 
                    width={index === 0 ? 400 : 200}
                    height={index === 0 ? 300 : 200}
                    formats={['webp']}
                    fallbackFormat={'jpg'}
                    class="w-full h-full object-cover"
                  />
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <!-- Feature Section with improved cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
          {features.map((feature, index) => (
            <div class="bg-white/90 backdrop-blur-sm p-8 rounded-2xl shadow-lg border border-cyan-50 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 group">
              <div class="mb-6 relative">
                <div class="absolute inset-0 bg-gradient-to-br from-cyan-400/20 to-purple-300/20 rounded-full blur-xl transform scale-150 -z-10 group-hover:scale-[1.75] transition-transform duration-700"></div>
                <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-teal-500 to-cyan-400 flex items-center justify-center shadow-md group-hover:scale-110 transition-transform duration-300">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={feature.icon} />
                  </svg>
                </div>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{feature.title}</h3>
              <p class="text-gray-600 leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Right Column - Blog Posts (narrower) -->
      <div class="lg:col-span-4 space-y-10">
        <!-- Featured Post with improved design -->
        <div class="bg-gradient-to-br from-cyan-50 to-purple-100 rounded-3xl p-8 shadow-lg border border-cyan-100/50 relative overflow-hidden group">
          <div class="absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br from-cyan-300/20 to-purple-200/10 rounded-full blur-2xl group-hover:scale-110 transition-transform duration-700"></div>
          
          <h2 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-700 to-teal-600 mb-6 relative z-10">Featured Post</h2>
          
          <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 group-hover:-translate-y-1 relative z-10">
            <div class="h-48 bg-gradient-to-r from-cyan-400 to-purple-400 relative overflow-hidden">
              <div class="absolute inset-0 bg-[url('/pattern.svg')] opacity-20"></div>
            </div>
            <div class="p-6">
              <div class="flex items-center gap-2 mb-3">
                <span class="px-3 py-1 bg-cyan-100 text-teal-800 text-xs font-semibold rounded-full">
                  Bakeware Tips
                </span>
                <span class="text-xs text-gray-500">5 min read</span>
              </div>
              
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-teal-700 transition-colors duration-300">
                Maximizing 18" Oven Space
              </h3>
              
              <p class="text-gray-600 mb-4 line-clamp-2">
                Learn how to bake like a pro in your tiny kitchen with our space-saving strategies.
              </p>
              
              <a href="#" class="inline-flex items-center gap-2 text-teal-600 hover:text-teal-800 font-medium transition-all duration-300 group-hover:translate-x-1">
                <span>Read more</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Bakeware Articles with glassmorphism -->
        <div class="relative overflow-hidden bg-gradient-to-br from-purple-900 to-teal-900 rounded-2xl p-8 shadow-lg border border-purple-400/20 backdrop-blur-sm group">
          <!-- Decorative elements -->
          <div class="absolute -top-12 -right-12 w-32 h-32 bg-cyan-500/20 rounded-full blur-2xl"></div>
          <div class="absolute -bottom-16 -left-16 w-40 h-40 bg-purple-400/10 rounded-full blur-3xl"></div>
          
          <!-- Glass card effect -->
          <div class="relative z-10">
            <h2 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-purple-200 mb-6">Bakeware Articles</h2>
            
            <div class="space-y-3 mb-6">
              <div class="h-2 w-3/4 bg-gradient-to-r from-cyan-400/30 to-purple-300/10 rounded-full"></div>
              <div class="h-2 w-1/2 bg-gradient-to-r from-teal-400/20 to-cyan-300/5 rounded-full"></div>
              <div class="h-2 w-2/3 bg-gradient-to-r from-purple-400/10 to-transparent rounded-full"></div>
            </div>
            
            <a 
              href="/blog/category/bakeware/" 
              class="mt-6 inline-flex items-center gap-2 text-cyan-300 hover:text-cyan-200 font-medium transition-all duration-300 group-hover:translate-x-1"
            >
              <span>View all bakeware articles</span>
              <span class="flex items-center justify-center w-6 h-6 rounded-full bg-cyan-400/20 group-hover:bg-cyan-400/30 transition-all duration-300">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          </div>
        </div>
        
        <!-- Newsletter signup -->
        <div class="bg-gradient-to-br from-teal-50 to-cyan-100 rounded-3xl p-8 shadow-lg border border-teal-100/50 relative overflow-hidden group">
          <div class="absolute  -right-20 w-40 h-40 bg-gradient-to-br from-purple-300/20 to-cyan-100/10 rounded-full blur-2xl group-hover:scale-110 transition-transform duration-700"></div>
          
          <h2 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-700 to-teal-600 mb-4 relative z-10">Baking Tips</h2>
          <p class="text-gray-700 mb-6 relative z-10">Get weekly tiny kitchen baking tips delivered to your inbox</p>
          
          <div class="relative z-10">
            <div class="flex flex-col sm:flex-row gap-3">
              <input 
                type="email" 
                placeholder="Your email" 
                class="flex-1 px-4 py-3 rounded-full border border-teal-200 focus:outline-none focus:ring-2 focus:ring-teal-500/50"
              />
              <button class="bg-gradient-to-r from-teal-600 to-cyan-500 text-white font-medium py-3 px-6 rounded-full hover:shadow-lg hover:shadow-cyan-200/50 transition-all duration-300">
                Subscribe
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
  
  body {
    font-family: 'Poppins', sans-serif;
    background-color: #f8fdff;
    color: #333;
  }
  
  .transition-all {
    transition: all 0.3s ease;
  }
  
  .transform {
    transition: transform 0.3s ease;
  }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
</style>