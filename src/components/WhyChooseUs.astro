---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import MultipurposeImg from "@/data/assets/images/multipurpose-kitchen-appliances.jpg";
import SilentImg from "@/data/assets/images/quitest-kitchen-appliances.jpg";
import FitImg from "@/data/assets/images/tiny-kitchen-will-this-fit.jpg";

const reasons = [
    {
        title: "Will This Even Fit?",
        description: "Every product we recommend is hand-measured for spaces ≤500 sq. ft. Too big for a studio apartment? We'll tell you before you click 'buy.'.",
        image: FitImg,
        icon: "mdi:ruler-square",
        color: "purple"
    },
    {
        title: "Quiet Enough for Roommates",
        description: "We test decibel levels so your blender won't wake your sleeping roommate—or trigger a noise complaint.",
        image: SilentImg,
        icon: "mdi:volume-low",
        color: "cyan"
    },
    {
        title: "Multipurpose or Bust",
        description: "If it can't do at least 3 jobs (looking at you, Instant Pot + yogurt maker + rice cooker), we won't waste your precious cabinet space.",
        image: MultipurposeImg,
        icon: "mdi:tools",
        color: "teal"
    },
];
---

<section class="relative py-16 sm:py-24 overflow-hidden" aria-labelledby="why-choose-us-title">
  <!-- Background decorative elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-purple-900/5 to-cyan-900/5"></div>
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-cyan-300/20 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-purple-300/10 rounded-full blur-3xl -z-10"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16">
      <div class="inline-flex items-center justify-center mb-4">
        <span class="px-4 py-1 rounded-full bg-gradient-to-r from-purple-500/10 to-teal-500/10 text-purple-700 text-sm font-medium">Why Choose Us</span>
      </div>
      
      <h2 id="why-choose-us-title" class="text-4xl sm:text-5xl font-bold tracking-tight mb-6">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-teal-500">
          We Don't Just Review Gadgets
        </span>
      </h2>
      
      <h3 class="text-2xl sm:text-3xl font-medium text-gray-700 mb-6">
        We Solve Your Tiny Kitchen Nightmares
      </h3>
      
      <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto">
        No fluff, no filler—just curated tools, tested tricks, and tough-love advice to turn your pint-sized kitchen into a productivity powerhouse.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-10">
      {reasons.map((reason, index) => (
        <div class="group relative h-full">
          <div class="absolute inset-0 bg-gradient-to-br from-{reason.color}-600/20 to-{reason.color}-400/5 rounded-2xl blur-sm -z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="h-full bg-white/80 backdrop-blur-sm rounded-2xl overflow-hidden shadow-lg border border-{reason.color}-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-br from-{reason.color}-900/20 to-{reason.color}-600/40 mix-blend-multiply"></div>
              <Image
                src={reason.image}
                alt={`${reason.title} product category`}
                width={800}
                height={500}
                format="webp"
                class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-700"
              />
              
              <div class="absolute top-4 right-4">
                <div class="w-12 h-12 rounded-full bg-white/90 backdrop-blur-md flex items-center justify-center shadow-lg transform group-hover:scale-110 transition-transform duration-300">
                  <Icon name={reason.icon} class={`w-6 h-6 text-${reason.color}-600`} />
                </div>
              </div>
              
              <div class="absolute -bottom-6 left-6">
                <div class={`w-12 h-12 rounded-xl bg-gradient-to-br from-${reason.color}-600 to-${reason.color}-400 flex items-center justify-center shadow-lg transform rotate-12 group-hover:rotate-0 transition-transform duration-500`}>
                  <span class="text-white font-bold text-lg">0{index + 1}</span>
                </div>
              </div>
            </div>
            
            <div class="p-8 pt-10 relative">
              <h3 class={`text-xl font-bold mb-3 text-gray-800 group-hover:text-${reason.color}-700 transition-colors duration-300`}>
                {reason.title}
              </h3>
              
              <p class="text-gray-600 leading-relaxed">
                {reason.description}
              </p>
              
              <div class="mt-6 flex justify-end">
                <a href="/contact-us/" class={`inline-flex items-center gap-1 text-${reason.color}-600 hover:text-${reason.color}-800 font-medium text-sm transition-colors duration-300 group-hover:translate-x-1`}>
                  <span>Learn more</span>
                  <Icon name="mdi:arrow-right" class="w-4 h-4" />
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Bottom CTA -->
    <div class="mt-16 relative max-w-3xl mx-auto">
      <div class="absolute inset-0 bg-gradient-to-r from-purple-600/20 to-teal-600/20 rounded-3xl blur-md"></div>
      <div class="relative bg-white/70 backdrop-blur-md p-8 rounded-3xl shadow-lg border border-purple-100/50 overflow-hidden">
        <div class="absolute -bottom-20 -right-20 w-40 h-40 bg-gradient-to-br from-cyan-400/20 to-purple-400/20 rounded-full blur-3xl"></div>
        <div class="absolute -top-20 -left-20 w-40 h-40 bg-gradient-to-tr from-teal-400/20 to-purple-400/20 rounded-full blur-3xl"></div>
        
        <div class="relative z-10 text-center">
          <h3 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-teal-500 mb-4">Ready to transform your tiny kitchen?</h3>
          <p class="text-gray-700 mb-6 max-w-xl mx-auto">Our expert reviews and space-saving solutions are designed specifically for compact kitchens.</p>
          <a href="/blog/" class="inline-flex items-center gap-2 bg-gradient-to-r from-purple-600 to-teal-500 text-white font-medium py-3 px-8 rounded-full hover:shadow-lg hover:shadow-purple-200/50 transition-all duration-300 hover:-translate-y-1">
            <span>Explore Our Reviews</span>
            <Icon name="mdi:arrow-right" class="w-5 h-5" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
</style>